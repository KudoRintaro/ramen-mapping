<div class="registration-box">
  <h2 class="registration-title">会員新規登録</h2>

 <div class="signup-box">
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

     <table class="registration-table">
       <tr class="registration-field">
         <td>
           <%= f.label :name, "名前" %>
           <%= f.text_field :name, placeholder: "拉麺太郎", autofocus: true, size: 25, class:"registration-form" %>
         </td>
       </tr>
       <tr class="registration-field">
         <td>
           <%= f.label :kana, "フリガナ" %>
           <%= f.text_field :kana, placeholder: "ラーメンタロウ", size: 25, class:"registration-form" %>
         </td>
       </tr>
       <tr class="registration-field">
         <td>
           <%= f.label :email, "Eメールアドレス" %>
           <%= f.text_field :email, placeholder: "xxxx@xxxxx", size: 25, class:"registration-form" %>
         </td>
       </tr>
       <tr class="registration-field">
         <td>
           <%= f.label :password, "パスワード" %>
           <%= f.text_field :password, placeholder: "パスワード", size: 25, class:"registration-form" %>
         </td>
       </tr>
       <tr class="registration-field">
         <td>
           <%= f.label :image, "プロフィール画像" %>
          <%= f.file_field :image, accept: "image/*", class:"registration-form" %>
         </td>
       </tr>
       <tr class="registration-field">
         <td><%= f.submit "会員登録", class:"registration-button" %></td>
       </tr>
     </table>
    <% end %>
 </div>
</div>