<%#退会時フラッシュメッセージ%>
<div class="withdraw-flash-message">
 <%= flash[:withdraw] %>
</div>



<%#トップページ表示画像%>
<%#javascript実装予定%>
<div class="swiper">
 <h3 class="swiper-text">お気に入りのラーメンショップを見つけよう</h3>
 <div class="swiper-wrapper">
  <% @shops.each do |shop| %>
   <div class="swiper-slide">
    <%= image_tag shop.image, class:"swiper-image-size" %>
   </div>
  <% end %>
 </div>
</div>

<%#ログインボタン各種%>
<div class="login-list">
 <% if user_signed_in? %>

  <%= link_to destroy_user_session_path,method: :delete, class:"button" do %>
   <P>ログアウト</P>
  <% end %>

 <% else %>

  <%= link_to shops_path, class:"button" do %>
   <p>ゲストログイン</p>
  <% end %>

  <%= link_to new_user_registration_path, class:"button" do %>
   <p>新規会員登録</p>
  <% end %>

  <%= link_to new_user_session_path, class:"button" do %>
   <p>会員ログイン</p>
  <% end %>

 <% end %>
</div>