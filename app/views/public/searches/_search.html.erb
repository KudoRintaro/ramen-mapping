<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "--ジャンル検索--"}  %>
      <%= f.submit "検索", class:"search-form-button" %>
    <% end %>
  </div>
<% end %>