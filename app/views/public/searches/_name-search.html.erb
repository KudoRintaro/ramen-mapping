<% if user_signed_in? %>
  <div class="name-search-form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, :placeholder => "🔍店名を入力", class:"name-search-form-text-field" %>
      <%= f.submit "検索", class: "name-search-button" %>
    <% end %>
  </div>
<% end %>